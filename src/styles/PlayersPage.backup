/* src/styles/PlayersPage.css */

/* Page container tweaks */
.players-page {
  /* more free space at left & right */
  padding-left: 18px !important;
  padding-right: 18px !important;

  /* grid spacing vars */
  --players-col-pad-x: 3px;   /* tighter horizontal spacing between players */
  --players-row-gap-y: 8px;   /* tighter vertical spacing */
}

/* Header like the reference: title + subtitle + big plus */
.players-header {
  display: flex;
  align-items: flex-start;
  justify-content: space-between;
  gap: 12px;
}

.players-title {
  font-weight: 800;
  letter-spacing: 0.08em;
  font-size: 1.5rem;
  text-transform: uppercase;
  line-height: 1.1;
}

.players-subtitle {
  margin-top: 6px;
  font-size: 0.95rem;
  opacity: 0.75;
}

/* Enhanced + button */
.players-add-btn  {
  width: 48px !important;
  height: 48px !important;
  border-radius: 30px !important;
  font-size: 2rem !important;
  display: inline-flex !important;
  align-items: center !important;
  justify-content: center !important;
  background-color: #495057 !important;
  border-color: #495057 !important;
}

/*
  Grid:
  - DO NOT use negative margins anymore (it cancels the page padding)
  - Use row-gap + per-column padding for tight spacing
*/
.players-grid {
  row-gap: var(--players-row-gap-y);
  margin-left: 0 !important;
  margin-right: 0 !important;
}

.players-col {
  padding-left: var(--players-col-pad-x);
  padding-right: var(--players-col-pad-x);
}

/* Reduce extra internal padding from Card.Body */
.players-card-body {
  padding: 8px 0 4px !important;
}

/* Avatar wrapper: minimal spacing */
.players-avatar-wrap {
  margin-bottom: 6px !important;
}

/* Names: smaller + heavier */
.players-name {
  margin: 0 !important;
  font-size: 0.78rem;
  font-weight: 900;              /* bolder */
  letter-spacing: 0.06em;
  text-transform: uppercase;
  line-height: 1.05;
}

/* Initials inside the avatar when no image */
.players-initial {
  font-size: 1.1rem;
  font-weight: 900;
  color: #495057;
}

.players-initial-preview {
  font-size: 1.8rem;
  font-weight: 900;
  color: #495057;
}

/* avatars: circular, responsive */
.player-avatar {
  width: 84px;
  height: 84px;
  border-radius: 50%;
  overflow: hidden;
  display: inline-flex;
  align-items: center;
  justify-content: center;
  background-color: #e9ecef;
  border: 2px solid #dee2e6;
  flex: 0 0 auto;
}

.player-avatar img {
  width: 100%;
  height: 100%;
  object-fit: cover;
  display: block;
}

/* modal preview slightly larger */
.player-avatar--preview {
  width: 96px;
  height: 96px;
}

@media (max-width: 420px) {
  /* More edge padding on tiny screens */
  .players-page {
    padding-left: 16px !important;
    padding-right: 16px !important;
    --players-col-pad-x: 2px;   /* even tighter between players */
    --players-row-gap-y: 6px;
  }

  .player-avatar {
    width: 72px;
    height: 72px;
  }

  .player-avatar--preview {
    width: 86px;
    height: 86px;
  }

  .players-name {
    font-size: 0.74rem;
    font-weight: 900;
  }
}

/* Delete modal width */
.delete-player-modal-parent .delete-player-modal.modal-dialog {
  max-width: 360px !important;
}

@media (max-width: 420px) {
  .delete-player-modal-parent .delete-player-modal.modal-dialog {
    max-width: 300px !important;
  }
}

/* Hard center delete modal on mobile */
.delete-player-modal-parent.modal {
  position: fixed !important;
  inset: 0 !important;
  height: 100dvh !important;
  display: flex !important;
  align-items: center !important;
  justify-content: center !important;
  padding: 0 12px !important;
}

@supports not (height: 100dvh) {
  .delete-player-modal-parent.modal {
    height: 100vh !important;
  }
}

.delete-player-modal-parent .modal-dialog {
  margin: 0 !important;
}
