/* avatars: fluid, circular, responsive */
.player-avatar {
  width: 84px;
  height: 84px;
  border-radius: 50%;
  overflow: hidden;
  display: inline-flex;
  align-items: center;
  justify-content: center;
  background-color: #e9ecef;
  border: 2px solid #dee2e6;
  flex: 0 0 auto;
}

.player-avatar img {
  width: 100%;
  height: 100%;
  object-fit: cover;
  display: block;
}

/* modal preview slightly larger */
.player-avatar--preview {
  width: 96px;
  height: 96px;
}

/* On very small viewports make avatars smaller so they don't become ellipses inside narrow columns */
@media (max-width: 420px) {
  .player-avatar {
    width: 64px;
    height: 64px;
  }
  .player-avatar--preview {
    width: 80px;
    height: 80px;
  }
}

.delete-player-modal-parent .delete-player-modal.modal-dialog {
  max-width: 360px !important;
}

@media (max-width: 420px) {
  .delete-player-modal-parent .delete-player-modal.modal-dialog {
    max-width: 300px !important;
  }
}

/* --- Hard center the delete modal on mobile (fixes iOS/Android viewport quirks) --- */
.delete-player-modal-parent.modal {
  position: fixed !important;
  inset: 0 !important;
  height: 100dvh !important;            /* dynamic viewport height (mobile-safe) */
  display: flex !important;
  align-items: center !important;
  justify-content: center !important;
  padding: 0 12px !important;          /* keep some side margin on narrow phones */
}

/* optional: if browser doesn't support dvh, fallback */
@supports not (height: 100dvh) {
  .delete-player-modal-parent.modal {
    height: 100vh !important;
  }
}

/* keep the dialog from adding its own margins that can shift it */
.delete-player-modal-parent .modal-dialog {
  margin: 0 !important;
}